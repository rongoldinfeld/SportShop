@model SportShop.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        @if (Context.Session.GetString("Admin") != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd>
                <span>Customer Name: @Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.LastName)</span>
                <br />
                <span>Customer Phone Number: @Html.DisplayFor(model => model.Customer.Phone)</span>
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.OrderProducts)
        </dt>
        <dd>
            <ul>
                @for (int i = 0; i < Model.OrderProducts.Count(); ++i)
                {
                    <li>
                        <span>Product Id: @Html.DisplayFor(m => m.OrderProducts.ElementAt(i).ProductId) </span>
                        <br />
                        <span> Product Name: @Html.DisplayFor(m => m.OrderProducts.ElementAt(i).Product.Name) </span>
                        <br />
                        <span> Quantity: @Html.DisplayFor(m => m.OrderProducts.ElementAt(i).Quantity) </span>
                    </li>
                }
            </ul>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sum)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sum) NIS
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>