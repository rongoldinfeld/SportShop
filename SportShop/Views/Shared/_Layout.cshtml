<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - SportShop</title>
    <link rel="stylesheet" href="/css/main.css"/>
</head>
<body>
<div class="navbar navbar-fixed-top">
    <div class="container h-25">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (Context.Session.GetString("Admin") != null)
                {
                    <li>
                        <a asp-controller="Products" asp-action="Index">Manage Products</a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-controller="About" asp-action="Index">About</a>
                    </li>
                }
            </ul>
            <ul class="nav navbar-nav pull-right">
                @if (Context.Session.GetString("User") != null)
                {
                    <li>Welcome, @Context.Session.GetString("UserFullName")</li>
                    <li class="logout">
                        <a asp-action="Logout" asp-controller="Login">Logout</a>
                    </li>
                }
                else if (Context.Session.GetString("Admin") != null)
                {
                    <li>Welcome, Admin</li>
                    <li class="logout">
                        <a asp-action="Logout" asp-controller="Login">Logout</a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Register" asp-action="Index">Register</a>
                    </li>
                    <li>
                        <a asp-controller="Login" asp-action="Index">Login</a>
                    </li>
                }
            </ul>

        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year Made By Ron, Tomer, Sapir</p>
    </footer>
</div>


<script src="lib/jquery.min.js"></script>
<script src="lib/bootstrap.min.js"></script>
<script src="js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>