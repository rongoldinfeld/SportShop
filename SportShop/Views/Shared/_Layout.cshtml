<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - SportShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/main.css"/>
    <link rel="stylesheet" href="~/css/stores.css"/>
    <link rel="stylesheet" href="~/css/catalog.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportShop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Catalog" asp-action="Index">Shop</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Stores" asp-action="Index">Stores</a>
                </li>
                @if (Context.Session.GetString("Admin") != null)
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">Manage Products</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Customers" asp-action="Index">Manage Users</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Statistics" asp-action="Index">Statistics</a>
                    </li>
                }
            </ul>
            <div id="weather-container">
                <spin class="nav-link" id="current-weather"></spin>
                
            </div>
            <form class="form-inline my-2 my-lg-0" asp-action="Index" asp-controller="Catalog" method="get">
                <input class="form-control mr-sm-2" type="search" name="catalogSearch" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </form>

            <ul class="navbar-nav">
                @if (Context.Session.GetString("User") == null && Context.Session.GetString("Admin") == null)
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Login" asp-action="Index">Login</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Register" asp-action="Index">Register</a>
                    </li>
                }
                else
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Login" asp-action="Logout">Logout, @Context.Session.GetString("UserFullName")</a>
                    </li>
                }
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-shopping-cart fa-1x"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer bg-dark">
    <div class="container">
        &copy; 2020 - SportShop - Best Prices In The Country
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib//font-awesome/js/all.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script type="text/javascript">
    var currentWeather = document.getElementById("current-weather");
    var currentWeatherContainer = document.getElementById("weather-container");

    var settings = {
        "async": true,
        "crossDomain": true,
        "url": "https://community-open-weather-map.p.rapidapi.com/weather?lat=31.9730&lon=34.7925&units=metric",
        "method": "GET",
        "headers": {
            "x-rapidapi-host": "community-open-weather-map.p.rapidapi.com",
            "x-rapidapi-key": "cbbecd8dc3msh750518bb4b5bfe9p1915a6jsnf3814e327ab2"
        }
    }


    jQuery.ajax(settings).done(function(response) {
        var temperature = response.main.temp;
        var feelsLike = response.main.feels_like;
        currentWeather.innerText = "טמפרטורה נוכחית: " + temperature + '°';

        var icon = document.createElement('i');
        if (temperature > 25) {
            icon.setAttribute("class", "fas fa-sun fa-2x tooltip");
            icon.style.color = "#ff8100";
        } else if (temperature >= 18 && temperature <= 25) {
            icon.setAttribute("class", "fas fa-cloud fa-2x tooltip");
            icon.style.color = "#00a1ff";
        } else if (temperature < 18) {
            icon.setAttribute("class", "fas fa-cloud-showers-heavy fa-2x tooltip");
            icon.style.color = "#2ae1ff";
        }
        var tooltipText = document.createElement("span");
        tooltipText.innerText = "מרגיש כמו " + temperature + '°';
        currentWeatherContainer.append(icon);
    });
    
</script>
@RenderSection("Scripts", required: false)
</body>
</html>