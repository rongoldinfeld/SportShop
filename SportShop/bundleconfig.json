[
  {
    "outputFileName": "wwwroot/lib/jquery.js",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "Scripts/jquery-3.3.1.js"
    ]
  },
  {
    "outputFileName": "wwwroot/lib/modernizr-2.8.3.js",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "Scripts/modernizr-*"
    ]
  },
  {
    "outputFileName": "wwwroot/lib/bootstrap.js",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "Scripts/bootstrap.js",
      "Scripts/bootstrapExtention.js"
    ]
  },
  {
    "outputFileName": "wwwroot/css/main.css",
    "inputFiles": [
      "Styles/bootstrap.css",
      "Styles/main.css",
      "Styles/Stores.css"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  }
]
